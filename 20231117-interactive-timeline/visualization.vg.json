    }
  ],
  "marks": [
    {
      "name": "yankeeLogo",
      "type": "symbol",
      "source": {"data": [{}]},
      "encode": {
        "enter": {
          "size": {"signal": "0.05"},
          "y": {"signal": "height-105"},
          "shape": {"signal": "yankeesLogoPath"},
          "fill": {"value": "#0C2340"}
        },
        "update": {
          "opacity": {
            "signal": "indexof(['1927', '1932'], toString(year(scrubbedSeason))) >= 0 ? 0 : 1"
          }
        }
      }
    },
    {
      "name": "yearText",
      "type": "text",
      "from": {"data": "selected_dataset"},
      "encode": {
        "enter": {
          "y": {"signal": "height-35"},
          "x": {"signal": "width"},
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 90},
          "font": {"value": "Impact"},
          "fill": {"value": "#0C2340"}
        },
        "update": {
          "text": {"signal": "year(scrubbedSeason)"},
          "opacity": {
            "signal": "indexof(['1998', '2000'], toString(year(scrubbedSeason))) >= 0 ? 0 : isWinningYear ? 1 : 0.35"
          }
        }
      }
    },
    {
      "name": "dataSourceText",
      "type": "text",
      "source": {"data": [{}]},
      "encode": {
        "enter": {
          "y": {"signal": "height+12"},
          "x": {"signal": "width"},
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 8},
          "fill": {"value": "#00bcd4"},
          "text": {"signal": "'Data Source: Wikipedia'"},
          "fontStyle": {"value": "italic"},
          "cursor": {"value": "pointer"}
        },
        "update": {
          "href": {"signal": "'https://en.wikipedia.org/wiki/New_York_Yankees'"}
        }
      }
    },
    {
      "name": "vizByText",
      "type": "text",
