          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 8},
          "fill": {"value": "#00bcd4"},
          "text": {"signal": "'Visual by Madison Giammaria'"},
          "fontStyle": {"value": "italic"},
          "cursor": {"value": "pointer"}
        },
        "update": {
          "href": {
            "signal": "'http://www.linkedin.com/in/madison-giammaria-58463b33'"
          }
        }
      }
    },
    {
      "name": "helperArrowText",
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 7},
          "y": {"value": 15},
          "text": {"value": "â¤´"},
